<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/homestyle.css">
    <!-- icons import -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <!-- add icon link -->
    <link rel="icon" href="/images/popcorn.png" type="image/x-icon">
    <script defer src="/js/script.js"></script>
    <title>Bookings | Cineverse</title>
</head>
<body>
    <%- include('partials/menu') %>
  <div class="booking-container">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Ticket Holder Name</th>
        <th>Movie Title</th>
        <th>Duration (in minutes)</th>
        <th>Screening Time</th>
        <th>Hall #</th>
        <th>Seat #</th>
        <th>Booking Date</th>
        <th>Price (in $)</th>
      </tr>
    </thead>
    <tbody>
      <% bookings.forEach(booking => { %>
        <tr>
          <td><%= booking.user_fname %></td>
          <td><%= booking.movie_title %></td>
          <td><%= booking.movie_duration %></td>
          <td><%= booking.movie_screeningtime %></td>
          <td><%= booking.movie_hallno %></td>
          <td><%= booking.seat_no %></td>
          <td><%= new Date(booking.booking_date).toLocaleDateString() %></td>
          <td><%= booking.booking_price %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
  <%- include('partials/footer') %>
</body>
</html>
