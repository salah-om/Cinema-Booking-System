<!DOCTYPE html>
<html lang="en" style="background-color: hsl(0, 0%, 23%)">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | Cineverse</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- icons import -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <!-- import css styles -->
    <link rel="stylesheet" href="css/style.css">
    <!-- add icon link -->
    <link rel="icon" href="images/popcorn.png" type="image/x-icon">
    <script defer src="script.js"></script>
</head>


<body>
  <div class="wrapper">
    <!-- Register User Form -->
    <form action="/api/users/" method="POST">

      <h1>Sign Up</h1>
      <div class="input-box">
        <input type="text" id="fname" name="fname" placeholder="First Name" value="<%= user.fname %>"
        required>
      </div>

      <div class="input-box">
        <input type="text" id="lname" name="lname" placeholder="Last Name" value="<%= user.lname %>"
        required>
      </div>

      <div class="input-box">
        <input type="email" id="email" name="email" placeholder="Email" value="<%= user.email %>"
        required>
        <i class='bx bxs-envelope'></i>
      </div>

      <div class="input-box">
        <input type="password" id="pass" name="pass" placeholder="Password" value="<%= user.pass %>"
        required>
        <i class='bx bxs-lock-alt' ></i>
      </div>

      <div class="input-box">
        <input type="password" id="cpass" placeholder="Confirm Password"
        required>
        <p id="message">&nbsp;&nbsp;&nbsp;</p>
        <i class='bx bxs-lock-alt' ></i>
      </div>

      <button type="submit" onclick="return checkForm(event)" class="btn">Register</button>

      <div class="register-link">
        <p>Already have an account? <a href="/">Login</a></p>
      </div>

    </form>
  </div>
</body>

